<div class="text-center pb-5">
  <h1>Welcome to RhythmWave Dance Booking</h1>

  {{#user}}
    <h3 class="mt-4 text-muted">Hi, {{name}}</h3>
  {{/user}}
</div>

<h5 class="text-primary">
  <i class="fa-solid fa-circle-info"></i> Explore our upcoming courses below.
</h5>

<div class="row g-4">
    {{#danceCourses}}
        <div class="col-md-6 col-lg-4">
          <a href="/course/{{_id}}" class="text-decoration-none text-dark"> 
            <div class="card dash-tile shadow-sm h-100">
              <div class="card-body d-flex align-items-start gap-3">
                <div>
                  <h5 class="card-title mb-1">{{title}}</h5>
                  <p class="card-text text-muted mb-0">{{description}}</p>
                  {{^duration}}
                    <p class="card-text text-muted mb-0 mt-2"><i class="fa-solid fa-clock"></i> Duration: N/A</p>
                  {{/duration}}
                   {{#duration}}
                    <p class="card-text text-muted mb-0 mt-2"><i class="fa-solid fa-clock"></i> Duration: {{duration}}</p>
                  {{/duration}}
                </div>
              </div>
                <div class="d-flex justify-content-end mt-auto p-3">
                  <small class="text-muted">View more <i class="fa-solid fa-chevron-right align-middle"></i></small>
                </div>
            </div>
          </a>
        </div>
    {{/danceCourses}}
</div>