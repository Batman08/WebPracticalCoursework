<div class="card">
  <h3 class="card-header bg-primary text-white"><i class="fa-solid fa-user-plus"></i> Register</h3>
  <div class="card-body">

    {{#errorMessage}}
        <div class="text-danger fw-bold"><i class="fa-solid fa-circle-exclamation"></i> {{errorMessage}}</div>
    {{/errorMessage}}
    
    <form method="post" role="/register">
        <div class="mb-3">
            {{user-name-error}}
            <label for="inputUsername" class="form-label"><i class="fa-solid fa-user"></i> Username</label>
            <input type="text" class="form-control" id="inputUsername" name="username" placeholder="Username" required>
        </div>
        
        <div class="mb-3">
            <label for="inputPassword" class="form-label"><i class="fa-solid fa-lock"></i> Password</label>
            <input type="password" class="form-control" id="inputPassword" name="password" aria-describedby="passwordHelp" placeholder="Password" minlength="8" required>
            <div id="passwordHelp" class="form-text">(8 characters minimum)</div>
        </div>
        
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-25"><i class="fa-solid fa-user-plus"></i> Register</button>
        </div>
    </form>
    
  </div>
</div>